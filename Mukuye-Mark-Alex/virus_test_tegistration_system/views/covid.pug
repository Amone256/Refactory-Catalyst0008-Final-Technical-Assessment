doctype html
html
    head
        link(rel="stylesheet", href="http://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="/health.css")

        title= title

    body
        div.b_image(style="background:url('images/form-header-image.png');background-size: cover;" )
            
        form.container-fluid(method="POST" action="/" id="form" name="form")
            
            div.col-lg-10.offset-md-1
                h4 Ministry of Health
                h1 COVID 19(CORONA VIRUS)
                h4 Virus-Test Registration Form 
                
                if alert =='success'
                    div.alert.alert-success Patient added successfully
                if alert =='error'
                    div.alert.alert-danger An error occured, failed to add patient
                
                div.row
                    div.col
                        div.form-field
                            label Surname
                            input(name="surname" id="surname")
                            small(style="color:red;")

                    div.col
                        div.form-field
                            label Given Name
                            input(name="givenName" id="givenName")
                            small(style="color:red; margin-top:-5px;")
                div.row
                    div.col
                        div.form-field
                            label Date of Birth
                            input(name="dob" id="dob" min="1871-08-01" max="2020-08-01" type="date") 
                            small(style="color:red; margin-top:-5px;")
                
                    div.col
                        label Place of Residence
                        div.form-field
                            input(name="residence" id="residence")
                            small(style="color:red; margin-top:-5px;")
                div.row
                    div.col
                        label Occupation
                        div.form-field
                            input(name="occupation" id="occupation")
                            small(style="color:red; margin-top:-5px;")
                    div.col
                        div.form-field 
                            label Nationality
                            input(name="nationality" id="nationality")
                            small(style="color:red; margin-top:-5px;")

                h5(style="margin-bottom:-10px;") Gender
                hr
                div(style="margin-top:-10px;")
                    div.form-check
                        input(class="form-check-input" type="radio" value="male" name="gender" id="gender" checked)
                        h6(class="form-check-label") Male
                    div.form-check(style="margin-left: 70px;")
                        input(class="form-check-input" type="radio" value="female" name="gender" id="gender")
                        h6(class="form-check-label") Female

                div.form-row(style="margin-top:50px;")
                        div.col.form-group
                            label Category
                            select(name="select" id="select")
                                option(value="none" selected disabled hidden) --Select Category--
                                option Returnee
                                option Contact
                                option Alert
                                option Volunteer
                            small(style="color:red; margin-top:-5px;")

                div.form-row(style="margin-bottom:10px;")
                    div.col.form-group
                        button.btn.btn-primary.btn-lg(type="submit") Submit
        script(src="validate.js")                 







