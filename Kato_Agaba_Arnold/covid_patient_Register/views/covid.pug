extends layout




block content
      link( href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
      link(href='covid.css' rel='stylesheet')
      script(src='validate.js')
      title Covid Register
      .container
        #form-wrapper.myform
        h4 Ministry of Health 
        h3  COVID-19 (CORONA VIRUS)
        h4 Virus-Test Registration Form
          br
          br
          if alert == "success"
            div.alert.alert-success Registration was  successfull
          if alert == "error"
            div.alert.alert-danger An error occurred, failed to Register
          form(method="POST" action='/')
            .row
              .form-group.col-6
                label Surname
                input.form-control(type='text' name='sur'  id='sur')
                small(style="color:red; margin-top:5px")
              br
              .form-group.col-6 
                label Given name
                input.form-control(type='text' name='given' id='given')
                small(style="color:red; margin-top:5px")
              br
            .row
              .form-group.col-6
                label Date of Birth
                input.form-control(type='date' name='dob'  id='dob')
                small(style="color:red; margin-top:5px")
              br
              .form-group.col-6 
                label Place of residence
                input.form-control(type='text' name='residence'  id='residence')
                small(style="color:red; margin-top:5px")
              
              br
            .row
              .form-group.col-6
                label Occupation
                input.form-control(type='text' name='occupation'  id='occupation')
                small(style="color:red; margin-top:5px")
              br
              .form-group.col-6
                label Nationality
                input.form-control(typr='text' name='nationality' id='national')
                small(style="color:red; margin-top:5px")
              br
              .row
                .form-group.col-6
                  .form-check-form-check-inline
                    input.form-check-input(type="radio" name="flexRadio" id="flexRadioDefault1")
                    label.form-check-label.for-flexRadioDefault1  Male
                .form-group.col-6
                  .form-check-form-check-inline
                    input.form-check-input(type="radio" name="flexRadio" id="flexRadioDefault1")
                    label.form-check-label.for-flexRadioDefault1  Female
              .row
                .form-group.col-12
                label Category
                select.form-select-aria-label(type='text' name='select' placeholder= '--Select Category--' id='select')
                  option(value='select Category') 
                  |        &gt;
                  option(value= 'Returnee') Returnee
                  option(value='Contact') Contact
                  option(value='Alert') Alert
                  option(value='Volunteer') Volunteer
                small(style="color:red; margin-top:5px")
                  
            br
            .row-justify-content-center
              .form-group.col-6
                button.btn.btn-primary.btn-block.register-account(type='submit' value='submit' onclick='validation()') Submit
     
       
